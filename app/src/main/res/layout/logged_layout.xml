<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoggedLayoutActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="7"
        >
            <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/button"
                    app:icon="@drawable/error_rounded_corner_view"
                    app:backgroundTint="@color/whiteTintColor"
                    style="?android:attr/borderlessButtonStyle"
                    app:iconTint="@color/loggedLayoutSecondColor"
                    android:layout_weight="1"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName"
                    android:background="@drawable/rounded_corner_view"
                    app:backgroundTint="@color/loggedLayoutThirdColor"
                    android:paddingLeft="20dp"
                    android:hint="Search for currency"
                    android:textColorHint="@color/loggedHintColor"
                    android:textColor="@color/whiteTintColor"
                    android:layout_weight="5"
            />
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton"
                    android:background="?android:attr/actionModeWebSearchDrawable"
                    app:backgroundTint="@color/loggedLayoutSecondColor"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>